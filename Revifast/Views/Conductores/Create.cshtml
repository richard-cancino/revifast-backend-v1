@model Revifast.Models.Conductor

@{
    ViewData["Title"] = "Create";
}
<body style="background-color:black;">
</body>
<h1 style="color:white">Registrar Datos</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col">
                    <label asp-for="Usuario" class="control-label" style="color:white"></label>
                    <input asp-for="Usuario" value="@User.Identity.Name" class="form-control-plaintext form-control-sm" readonly />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Correo" class="control-label" style="color:white"></label>
                    <input asp-for="Correo" value="@User.Identity.Name" class="form-control-plaintext form-control-sm" readonly />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nombres" class="control-label" style="color:white"></label>
                <input asp-for="Nombres" class="form-control form-control-sm" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label" style="color:white"></label>
                <input asp-for="Apellidos" class="form-control form-control-sm" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Dni" class="control-label" style="color:white"></label>
                    <input asp-for="Dni" class="form-control form-control-sm" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Celular" class="control-label" style="color:white"></label>
                    <input asp-for="Celular" class="form-control form-control-sm" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Regresar</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
